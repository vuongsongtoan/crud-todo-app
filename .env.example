# Database Configuration
DATABASE_CONNECTION_STRING=Server=your-server;Database=TodoDb;User Id=your-user;Password=your-password;TrustServerCertificate=True;

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7039;http://localhost:5014

# CORS Settings (for frontend URLs)
ALLOWED_ORIGINS=http://localhost:4200,https://your-production-domain.com

# Security Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-encryption-key-here

# External Services (if any)
# EMAIL_SERVICE_API_KEY=your-email-service-key
# BLOB_STORAGE_CONNECTION_STRING=your-blob-storage-connection

# Logging
LOG_LEVEL=Information

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
